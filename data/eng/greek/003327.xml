        <LEXMeaning Id="003327001003000" IsBiblicalTerm="Y" EntryCode="29.16" Indent="0">
          <LEXDomains>
            <LEXDomain>Memory and Recall</LEXDomain>
          </LEXDomains>
          <LEXSubDomains>
