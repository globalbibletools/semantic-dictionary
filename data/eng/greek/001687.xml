        <LEXMeaning Id="001687001002000" IsBiblicalTerm="M" EntryCode="11.40" Indent="0">
          <LEXDomains>
            <LEXDomain>Groups and Classes of Persons and Members of Such Groups and Classes</LEXDomain>
          </LEXDomains>
          <LEXSubDomains>
